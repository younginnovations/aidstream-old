<li class="element-activity drop">

    <div class="element-title">
        Contact Info
    </div>

    <div class="edit"><a href="<?php echo $this->baseUrl() ?>/activity/edit-element/?activity_id=<?php echo $this->activity_id; ?>&className=Activity_ContactInfo">Edit</a></div>	

    <?php $i = 1; ?>
    <?php foreach ($this->elements as $element): ?>
        <?php if ($i == '1'): ?>
            <div class="highlight">
            <?php else: ?>
                <div class="highlight first">
                <?php endif; ?>

                <ul class="style-3">
                     <!-- contact info type -->
                    <?php $type = $element['@type']; ?>
                    <?php if ($type || $element['@xml_lang']): ?>                        
                        <li>
                            <span class="name">Type: </span>
                                <span class="infom">
                                    <?php print $type; ?>
                                     <?php if ($element['@xml_lang'])
                                                            {
                                                                printf("[%s]" , Iati_Core_Codelist::getCodeByAttrib('ContactInfo' , '@xml_lang' , $element['@xml_lang']));
