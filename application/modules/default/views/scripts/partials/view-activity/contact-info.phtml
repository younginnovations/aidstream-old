                    <!-- MailingAddress Starts -->
                    <?php
                    $mailingaddresss = $element['MailingAddress'];
                    ?>
                    <?php if (!empty($mailingaddresss)): ?>                       
                        <li>
                            <span class="name">Mailing Address:</span>
